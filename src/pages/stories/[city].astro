---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allStories = await getCollection('stories');
  const cities = [...new Set(allStories.map(s => s.data.city.toLowerCase()))];
  return cities.map(city => {
    const filtered = allStories.filter(s => s.data.city.toLowerCase() === city);
    return {
      params: { city },
      props: { cityDisplayName: filtered[0].data.city, posts: filtered },
    };
  });
}

const { cityDisplayName, posts } = Astro.props;
---

<Layout title={`Stories from ${cityDisplayName}`}>
  <div class="min-h-screen bg-white pt-16 pb-24">
    <div class="container mx-auto px-4">
      <header class="mb-20 border-b border-gray-100 pb-10">
        <a href="/stories" class="text-sm font-bold text-gray-400 hover:text-black uppercase tracking-widest mb-6 inline-block">‚Üê All Stories</a>
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-gray-900 mb-6">{cityDisplayName} <span class="text-gray-300 italic font-light">Journals</span></h1>
      </header>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {posts.map((item) => (
          <article class="group">
            <a href={`/stories/${item.data.path}/`} class="block mb-5 overflow-hidden aspect-video bg-gray-100">
              <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
            </a>
            <div>
              <span class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2 block">{new Date(item.data.date).getFullYear()}</span>
              <h3 class="text-xl font-serif font-bold text-gray-900 mb-3 leading-snug group-hover:underline decoration-1 underline-offset-4">
                <a href={`/stories/${item.data.path}/`}>{item.data.card_title}</a>
              </h3>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</Layout>
