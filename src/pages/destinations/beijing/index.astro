---
import Layout from '@layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取北京景点
const allBeijingSpots = await getCollection('destinations', ({ id }) => {
  return id.startsWith('beijing/');
});

const beijingSpots = allBeijingSpots;

// 筛选特色景点
const featuredSpot = beijingSpots.find(spot => spot.data.featured) || beijingSpots[0];
const rightSpots = beijingSpots.filter(spot => 
  spot !== featuredSpot
).slice(0, 2);

const gridSpots = beijingSpots.filter(spot => 
  spot !== featuredSpot && !rightSpots.includes(spot)
);

// 辅助函数：获取稳定的详情页URL
const getDetailUrl = (spot) => {
  // 从slug中提取景点名称 (例如: 'beijing/yonghe-temple' -> 'yonghe-temple')
  const spotPath = spot.slug.split('/')[1] || spot.slug.split('/').pop();
  // 构造完整详情页URL
  return `/destinations/beijing/${spotPath}/detail/`;
};
---

<Layout title="Beijing - Explore China">
  <div class="min-h-screen bg-gray-50">
    <!-- 当前页大布局 -->
    <section class="py-12 container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 左侧大卡片 (2/3区域) -->
        <div class="lg:col-span-2">
          {featuredSpot && (
            <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 h-[500px]">
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent z-10"></div>
              <img 
                src={featuredSpot.data.image || 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Featured+Spot'}
                alt={featuredSpot.data.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute bottom-0 left-0 right-0 p-8 z-20 text-white">
                <span class="inline-block px-4 py-1 bg-indigo-600/90 backdrop-blur-sm rounded-full text-sm font-medium mb-4">
                  {featuredSpot.data.season || 'Featured'}
                </span>
                <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 leading-tight">
                  {featuredSpot.data.title}
                </h2>
                <p class="text-lg opacity-90 mb-6 max-w-2xl">
                  {featuredSpot.data.summary || 'Discover the imperial palaces, ancient temples, and modern wonders of China\'s capital city.'}
                </p>
                <a href={getDetailUrl(featuredSpot)} class="inline-flex items-center text-white font-medium text-lg group/btn">
                  Read More
                  <svg class="ml-2 w-5 h-5 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          )}
        </div>
        
        <!-- 右侧中卡片 (1/3区域) -->
        <div class="space-y-8">
          {rightSpots.map((spot, index) => (
            <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-shadow h-64" key={index}>
              <img 
                src={spot.data.image || 'https://via.placeholder.com/800x600/6366f1/ffffff?text='+encodeURIComponent(spot.data.title)}
                alt={spot.data.title} 
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-5 text-white">
                <h3 class="text-xl font-serif font-bold">{spot.data.title}</h3>
                <p class="text-gray-200 mt-2 text-sm">
                  {spot.data.summary?.slice(0, 80) || 'Explore this fascinating destination in Beijing'}
                </p>
                <a href={getDetailUrl(spot)} class="mt-3 inline-block text-indigo-300 hover:text-white transition-colors font-medium text-sm">
                  View Details →
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 下滑页小卡片区域 -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-serif font-bold text-gray-900">
            More Beijing Attractions
          </h2>
          <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center group">
            View All
            <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {gridSpots.map((spot, index) => (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow group" key={index}>
              <div class="h-48 overflow-hidden">
                <img 
                  src={spot.data.image || 'https://via.placeholder.com/800x600/6366f1/ffffff?text='+encodeURIComponent(spot.data.title)}
                  alt={spot.data.title} 
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="p-5">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{spot.data.season || 'All Seasons'}</span>
                </div>
                <h3 class="text-lg font-serif font-bold text-gray-900 mb-2">{spot.data.title}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">
                  {spot.data.summary || 'Discover the history and beauty of this Beijing attraction'}
                </p>
                <a href={getDetailUrl(spot)} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm group/btn">
                  Explore
                  <svg class="ml-1 w-4 h-4 opacity-0 group-hover/btn:opacity-100 transform group-hover/btn:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>