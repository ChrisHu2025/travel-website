---
import Layout from '@layouts/Layout.astro';

// 城市数据
const cities = [
  { id: 'beijing', name: 'Beijing', image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Beijing', featured: true },
  { id: 'shanghai', name: 'Shanghai', image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Shanghai', featured: true },
  { id: 'chengdu', name: 'Chengdu', image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Chengdu', featured: false },
  { id: 'xian', name: 'Xi\'an', image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Xian', featured: false },
  { id: 'guilin', name: 'Guilin', image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Guilin', featured: false }
];

const featuredCity = cities.find(city => city.featured) || cities[0];
const rightCities = cities.filter(city => city !== featuredCity).slice(0, 2);
const gridCities = cities.filter(city => city !== featuredCity && !rightCities.includes(city));
---

<Layout title="Destinations - Explore China">
  <div class="min-h-screen bg-gray-50">
    <!-- 当前页大布局 -->
    <section class="py-12 container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 左侧大卡片 (2/3区域) -->
        <div class="lg:col-span-2">
          <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 h-[500px]">
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent z-10"></div>
            <img 
              src={featuredCity.image} 
              alt={featuredCity.name} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute bottom-0 left-0 right-0 p-8 z-20 text-white">
              <span class="inline-block px-4 py-1 bg-indigo-600/90 backdrop-blur-sm rounded-full text-sm font-medium mb-4">
                Featured Destination
              </span>
              <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 leading-tight">
                {featuredCity.name}
              </h2>
              <p class="text-lg opacity-90 mb-6 max-w-2xl">
                Explore the ancient capital's imperial palaces, sacred temples, and modern wonders
              </p>
              <a href={`/destinations/${featuredCity.id}/`} class="inline-flex items-center text-white font-medium text-lg group/btn">
                Discover {featuredCity.name}
                <svg class="ml-2 w-5 h-5 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- 右侧中卡片 (1/3区域) -->
        <div class="space-y-8">
          {rightCities.map((city, index) => (
            <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-shadow h-64" key={index}>
              <img 
                src={city.image} 
                alt={city.name} 
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-5 text-white">
                <h3 class="text-xl font-serif font-bold">{city.name}</h3>
                <p class="text-gray-200 mt-2 text-sm">Explore famous attractions</p>
                <a href={`/destinations/${city.id}/`} class="mt-3 inline-block text-indigo-300 hover:text-white transition-colors font-medium text-sm">
                  Discover {city.name} →
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 下滑页小卡片区域 -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-serif font-bold text-gray-900">
            More Chinese Destinations
          </h2>
          <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center group">
            View All
            <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {gridCities.map((city, index) => (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow group" key={index}>
              <div class="h-48 overflow-hidden">
                <img 
                  src={city.image} 
                  alt={city.name} 
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="p-5">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>Featured Destination</span>
                </div>
                <h3 class="text-lg font-serif font-bold text-gray-900 mb-2">{city.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">Discover the hidden gems and iconic landmarks</p>
                <a href={`/destinations/${city.id}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm group/btn">
                  Explore
                  <svg class="ml-1 w-4 h-4 opacity-0 group-hover/btn:opacity-100 transform group-hover/btn:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>