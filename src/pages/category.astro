---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取当前分类的内容
const category = Astro.params.category;
const allItems = await getCollection(category);
const items = allItems.sort((a, b) => new Date(b.data.date || 0) - new Date(a.data.date || 0));

// 将内容分为不同区域
const featuredItem = items[0];
const rightItems = items.slice(1, 3);
const gridItems = items.slice(3);
---

<Layout title={category.charAt(0).toUpperCase() + category.slice(1) + " - Explore China"}>
  <div class="min-h-screen bg-gray-50">
    <!-- 当前页大布局 -->
    <section class="py-12 container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 左侧大卡片 (2/3区域) -->
        <div class="lg:col-span-2">
          {featuredItem && (
            <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 h-[500px]">
              <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent z-10"></div>
              <img 
                src={featuredItem.data.image || 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1200&q=80'} 
                alt={featuredItem.data.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute bottom-0 left-0 right-0 p-8 z-20 text-white">
                <span class="inline-block px-4 py-1 bg-indigo-600/90 backdrop-blur-sm rounded-full text-sm font-medium mb-4">
                  {featuredItem.data.region || 'Featured'}
                </span>
                <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 leading-tight">
                  {featuredItem.data.title}
                </h2>
                <p class="text-lg opacity-90 mb-6 max-w-2xl">{featuredItem.data.description}</p>
                <a href={`/` + category + `/${featuredItem.slug}/`} class="inline-flex items-center text-white font-medium text-lg group/btn">
                  Read More
                  <svg class="ml-2 w-5 h-5 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          )}
        </div>
        
        <!-- 右侧中卡片 (1/3区域) -->
        <div class="space-y-8">
          {rightItems.map((item, index) => (
            <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-shadow h-64" key={index}>
              <img 
                src={item.data.image || 'https://images.unsplash.com/photo-1543832923-e174a6b6e0e7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80'} 
                alt={item.data.title} 
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-5 text-white">
                <h3 class="text-xl font-serif font-bold">{item.data.title}</h3>
                <p class="text-gray-200 mt-2 text-sm">{item.data.excerpt || item.data.description?.slice(0, 80) + '...'}</p>
                <a href={`/` + category + `/${item.slug}/`} class="mt-3 inline-block text-indigo-300 hover:text-white transition-colors font-medium text-sm">
                  View Details →
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 下滑页小卡片区域 -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-serif font-bold text-gray-900">
            More {category.charAt(0).toUpperCase() + category.slice(1)}
          </h2>
          <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center group">
            View All
            <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {gridItems.map((item, index) => (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow group" key={index}>
              <div class="h-48 overflow-hidden">
                <img 
                  src={item.data.image || 'https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80'} 
                  alt={item.data.title} 
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="p-5">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{new Date(item.data.date || new Date()).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                  <span class="mx-2">•</span>
                  <span>{item.data.region || 'China'}</span>
                </div>
                <h3 class="text-lg font-serif font-bold text-gray-900 mb-2">{item.data.title}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{item.data.description}</p>
                <a href={`/` + category + `/${item.slug}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm group/btn">
                  Read story
                  <svg class="ml-1 w-4 h-4 opacity-0 group-hover/btn:opacity-100 transform group-hover/btn:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter section - 延续首页设计 -->
    <section class="py-16 bg-gradient-to-r from-indigo-600 to-purple-700 text-white">
      <div class="container mx-auto px-4 text-center">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-serif font-bold mb-4">Travel Inspiration Delivered</h2>
          <p class="text-xl opacity-90 mb-8">
            Subscribe to our newsletter for exclusive travel tips, hidden gems, and practical advice
          </p>
          <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Enter your email address" 
              class="flex-1 px-6 py-4 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-indigo-400"
              required
            />
            <button 
              type="submit" 
              class="bg-white text-indigo-600 font-medium px-8 py-4 rounded-lg hover:bg-gray-100 transition-colors shadow-lg"
            >
              Subscribe Free
            </button>
          </form>
        </div>
      </div>
    </section>
  </div>
</Layout>