---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// 1. 获取各板块数据
const allDestinations = await getCollection('destinations');
const allInSeason = await getCollection('in-season');
const allResorts = await getCollection('resorts');
const allStories = await getCollection('stories');

// 2. 筛选 Featured
const featuredDestinations = allDestinations.filter(d => d.data.featured);
const featuredInSeason = allInSeason.filter(d => d.data.featured);
const featuredResorts = allResorts.filter(d => d.data.featured);
const featuredStories = allStories.filter(d => d.data.featured);

// 3. 构建展示数据 (防御性编程：如果没有数据则为空)
const leftCards = [
  featuredDestinations[0],
  featuredInSeason[0]
].filter(Boolean);

const middleTopCard = featuredDestinations[1];
const middleBottomCard = featuredResorts[0];

const rightCards = [
  featuredStories[0],
  featuredStories[1],
  featuredDestinations[2],
  featuredInSeason[1]
].filter(Boolean);

// 4. 下滑页内容
const destinationsSection = featuredDestinations.slice(0, 3);
const inSeasonSection = featuredInSeason.slice(0, 3);
const resortsSection = featuredResorts.slice(0, 3);
const storiesSection = featuredStories.slice(0, 3);
---

<Layout title="Explore China - Authentic Travel Experiences">
  <div class="min-h-screen bg-gray-50">
    <!-- 当前展示页 -->
    <section class="py-6 container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr_1fr] gap-5 min-h-[400px]">

        <!-- 左侧区域 -->
        <div class="flex flex-col space-y-5">
          {leftCards.map((item) => (
            <div class="group rounded-xl shadow-md bg-white border border-gray-100 flex-1 overflow-hidden relative">
              <!-- ✅ 链接修复：使用 collection 和 path -->
              <a href={`/${item.collection}/${item.data.path}/`} class="absolute inset-0 z-10"></a>
              <div class="aspect-[4/3] overflow-hidden">
                <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
              </div>
              <div class="p-4 bg-white">
                <h3 class="text-lg font-serif font-bold text-gray-900 group-hover:text-indigo-700 transition-colors">
                  {item.data.card_title || item.data.title}
                </h3>
                <p class="text-gray-600 text-sm mt-1 line-clamp-2">
                  {item.data.card_summary || item.data.summary}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- 中间区域 -->
        <div class="flex flex-col space-y-5">
          {middleTopCard && (
            <div class="group rounded-xl shadow-md bg-white border border-gray-100 flex-[2] overflow-hidden relative">
              <!-- ✅ 链接修复 -->
              <a href={`/destinations/${middleTopCard.data.path}/`} class="absolute inset-0 z-10"></a>
              <div class="aspect-[4/3] overflow-hidden">
                <img src={middleTopCard.data.image} alt={middleTopCard.data.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
              </div>
              <div class="p-5 bg-white">
                <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium mb-2">
                  Featured
                </span>
                <h2 class="text-xl md:text-2xl font-serif font-bold mb-2 leading-tight group-hover:text-indigo-700 transition-colors">
                  {middleTopCard.data.title}
                </h2>
                <p class="text-gray-700 text-sm mb-3 line-clamp-2">{middleTopCard.data.summary}</p>
                <span class="inline-flex items-center text-indigo-600 font-medium text-xs">
                  View Details <span class="ml-1">→</span>
                </span>
              </div>
            </div>
          )}

          {middleBottomCard && (
            <div class="group rounded-xl shadow-md bg-white border border-gray-100 flex-1 flex overflow-hidden relative">
              <!-- ✅ 链接修复 -->
              <a href={`/resorts/${middleBottomCard.data.path}/`} class="absolute inset-0 z-10"></a>
              <div class="w-1/2 aspect-[4/3] overflow-hidden">
                <img src={middleBottomCard.data.image} alt={middleBottomCard.data.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
              </div>
              <div class="w-1/2 p-4 bg-white flex flex-col justify-center">
                <span class="inline-block px-2 py-1 bg-emerald-100 text-emerald-800 rounded-full text-xs font-medium mb-1 w-fit">
                  Resort
                </span>
                <h3 class="text-base font-serif font-bold text-gray-900 group-hover:text-emerald-700 transition-colors">
                  {middleBottomCard.data.card_title || middleBottomCard.data.title}
                </h3>
                <p class="text-gray-600 text-xs mt-1 line-clamp-3">
                  {middleBottomCard.data.card_summary}
                </p>
              </div>
            </div>
          )}
        </div>

        <!-- 右侧区域 -->
        <div class="flex flex-col space-y-3">
          {rightCards.map((item) => (
            <div class="group rounded-xl shadow-md bg-white border border-gray-100 flex-1 overflow-hidden relative">
              <!-- ✅ 链接修复 -->
              <a href={`/${item.collection}/${item.data.path}/`} class="absolute inset-0 z-10"></a>
              <div class="aspect-[4/3] overflow-hidden">
                <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
              </div>
              <div class="p-3 bg-white">
                <h3 class="text-base font-serif font-bold text-gray-900 line-clamp-1 group-hover:text-indigo-700 transition-colors">
                   {item.data.card_title || item.data.title}
                </h3>
                <p class="text-gray-600 text-xs mt-1 line-clamp-2">
                   {item.data.card_summary}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 下滑页内容 (列表) -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">

        <!-- 1. Destinations -->
        <div class="mb-16">
          <div class="flex flex-col items-center mb-10">
            <h2 class="text-3xl font-serif font-bold text-gray-900">Destinations</h2>
            <div class="border-t border-gray-300 w-24 mt-2"></div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {destinationsSection.map((item) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100">
                <div class="h-64 overflow-hidden">
                  <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"/>
                </div>
                <div class="p-5">
                  <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm mb-3">
                    {item.data.region}
                  </span>
                  <h3 class="text-xl font-serif font-bold text-gray-900 mb-2">{item.data.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{item.data.card_summary}</p>
                  <!-- ✅ 链接修复 -->
                  <a href={`/destinations/${item.data.path}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                    Discover →
                  </a>
                </div>
              </article>
            ))}
          </div>
          <div class="flex justify-end mt-6">
            <a href="/destinations/" class="text-indigo-600 font-medium hover:underline">View All Destinations →</a>
          </div>
        </div>

        <!-- 2. In Season -->
        <div class="mb-16">
          <h2 class="text-3xl font-serif font-bold text-gray-900 mb-8">In Season</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {inSeasonSection.map((item) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100">
                <div class="h-64 overflow-hidden">
                  <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"/>
                </div>
                <div class="p-5">
                  <span class="inline-block px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-sm mb-3">
                    {item.data.best_season[0]}
                  </span>
                  <h3 class="text-xl font-serif font-bold text-gray-900 mb-2">{item.data.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{item.data.card_summary}</p>
                  <!-- ✅ 链接修复 -->
                  <a href={`/in-season/${item.data.path}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                    Explore →
                  </a>
                </div>
              </article>
            ))}
          </div>
           <div class="flex justify-end mt-6">
            <a href="/in-season/" class="text-indigo-600 font-medium hover:underline">View All Seasonal →</a>
          </div>
        </div>

        <!-- 3. Resorts -->
        <div class="mb-16">
           <div class="flex flex-col items-center mb-10">
            <h2 class="text-3xl font-serif font-bold text-gray-900">Resorts & Getaways</h2>
            <div class="border-t border-gray-300 w-24 mt-2"></div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {resortsSection.map((item) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100">
                <div class="h-64 overflow-hidden">
                  <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"/>
                </div>
                <div class="p-5">
                  <span class="inline-block px-3 py-1 bg-emerald-100 text-emerald-800 rounded-full text-sm mb-3">
                    {item.data.category || 'Luxury'}
                  </span>
                  <h3 class="text-xl font-serif font-bold text-gray-900 mb-2">{item.data.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{item.data.card_summary}</p>
                  <!-- ✅ 链接修复 -->
                  <a href={`/resorts/${item.data.path}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                    View Resort →
                  </a>
                </div>
              </article>
            ))}
          </div>
           <div class="flex justify-end mt-6">
            <a href="/resorts/" class="text-indigo-600 font-medium hover:underline">View All Resorts →</a>
          </div>
        </div>

        <!-- 4. Stories -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-gray-900 mb-8">Travel Stories</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {storiesSection.map((item) => (
              <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-100">
                <div class="h-64 overflow-hidden">
                  <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"/>
                </div>
                <div class="p-5">
                  <div class="flex items-center text-sm text-gray-500 mb-3">
                    <span>{new Date(item.data.date).toLocaleDateString()}</span>
                    <span class="mx-2">•</span>
                    <span>{item.data.author}</span>
                  </div>
                  <h3 class="text-xl font-serif font-bold text-gray-900 mb-2">{item.data.title}</h3>
                  <p class="text-gray-600 mb-4 line-clamp-2">{item.data.card_summary}</p>
                  <!-- ✅ 链接修复 -->
                  <a href={`/stories/${item.data.path}/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                    Read Story →
                  </a>
                </div>
              </article>
            ))}
          </div>
           <div class="flex justify-end mt-6">
            <a href="/stories/" class="text-indigo-600 font-medium hover:underline">View All Stories →</a>
          </div>
        </div>

      </div>
    </section>
  </div>
</Layout>
