---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const spots = await getCollection('spots');
const guides = await getCollection('guides');
---

<Layout title="首页">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">探索世界之美</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      分享最真实的旅游景点介绍和实用攻略，让每一次旅行都充满惊喜
    </p>
  </div>

  <section class="mb-16">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold text-gray-800">热门景点</h2>
      <a href="/spots/" class="text-blue-600 hover:text-blue-800 font-medium">
        查看更多 →
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {spots.slice(0, 3).map((spot) => (
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <img 
            src={spot.data.image} 
            alt={spot.data.title} 
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800 mb-2">{spot.data.title}</h3>
            <p class="text-gray-600 mb-4">{spot.data.city} • {spot.data.season}</p>
            <p class="text-gray-700 mb-4">{spot.data.description}</p>
            <a href={`/spots/${spot.slug}/`} class="text-blue-600 hover:text-blue-800 font-medium">
              了解更多 →
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <section>
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold text-gray-800">最新攻略</h2>
      <a href="/guides/" class="text-blue-600 hover:text-blue-800 font-medium">
        查看更多 →
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {guides.slice(0, 3).map((guide) => (
        <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <img 
            src={guide.data.image} 
            alt={guide.data.title} 
            class="w-full h-48 object-cover"
            loading="lazy"
          />
          <div class="p-6">
            <div class="text-gray-500 text-sm mb-2">
              {new Date(guide.data.date).toLocaleDateString()}
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">{guide.data.title}</h3>
            <p class="text-gray-700 mb-4">{guide.data.description}</p>
            <a href={`/guides/${guide.slug}/`} class="text-blue-600 hover:text-blue-800 font-medium">
              阅读攻略 →
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>
</Layout>