---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allSeason = await getCollection('in-season');
---

<Layout title="In Season Recommendations">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <span class="text-indigo-600 font-bold tracking-wider uppercase">Travel Guide</span>
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mt-2 mb-6">Best In Season</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Curated destinations that are perfect for visiting right now.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allSeason.map((item) => (
          <a href={`/in-season/${item.data.path}/`} class="group block relative h-96 rounded-2xl overflow-hidden shadow-lg">
            <img
                src={item.data.image}
                alt={item.data.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>

            <div class="absolute bottom-0 left-0 p-8 w-full">
                <div class="mb-2">
                    <span class="px-3 py-1 bg-white/20 backdrop-blur text-white text-xs rounded-full">
                        {item.data.best_season[0]}
                    </span>
                </div>
                <h3 class="text-2xl font-serif font-bold text-white mb-2 leading-tight group-hover:text-indigo-200 transition-colors">
                    {item.data.card_title || item.data.title}
                </h3>
                <p class="text-gray-300 text-sm line-clamp-2 mb-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300">
                    {item.data.card_summary}
                </p>
                <span class="text-white text-sm font-medium border-b border-transparent group-hover:border-white transition-all">
                    Discover More â†’
                </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
