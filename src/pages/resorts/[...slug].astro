---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('resorts');
  return entries.map(entry => ({
    params: { slug: entry.data.path },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <div class="min-h-screen bg-gray-50">
    <section class="relative h-[60vh] md:h-[70vh]">
      <div class="absolute inset-0">
        <img src={entry.data.image} alt={entry.data.title} class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
      </div>
      <div class="container mx-auto px-4 h-full flex flex-col justify-end pb-20">
        <span class="text-indigo-300 font-medium tracking-wider uppercase mb-2">Luxury Resort</span>
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-4">{entry.data.title}</h1>
        <p class="text-xl text-white/90 max-w-2xl">{entry.data.summary}</p>
      </div>
    </section>

    <section class="py-16 container mx-auto px-4">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-8 md:p-12 -mt-24 relative z-10">
        <div class="flex flex-col md:flex-row gap-8 mb-12 border-b pb-8">
            <div class="flex-1">
                <span class="block text-gray-500 text-sm uppercase tracking-wide">Location</span>
                <span class="text-lg font-bold text-gray-900">{entry.data.city}, {entry.data.region}</span>
            </div>
            <div class="flex-1">
                <span class="block text-gray-500 text-sm uppercase tracking-wide">Best Season</span>
                <span class="text-lg font-bold text-gray-900">{entry.data.best_season.join(', ')}</span>
            </div>
        </div>

        <div class="prose prose-lg text-gray-700 max-w-none">
            <Content />
        </div>

        <div class="mt-12 text-center">
             <a href="/resorts" class="inline-block px-8 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors">Back to Resorts</a>
        </div>
      </div>
    </section>
  </div>
</Layout>
