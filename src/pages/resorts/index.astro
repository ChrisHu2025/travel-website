---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allResorts = await getCollection('resorts');
const regions = [...new Set(allResorts.map(r => r.data.region))];
---

<Layout title="Luxury Resorts - Explore China">
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">Luxury Resorts</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">Discover world-class relaxation in China's most beautiful locations.</p>
      </div>

      {regions.map(region => (
        <section class="mb-16">
            <div class="flex items-center mb-8">
                <h2 class="text-2xl font-serif font-bold text-indigo-900">{region}</h2>
                <div class="ml-4 flex-grow h-px bg-indigo-100"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {allResorts.filter(r => r.data.region === region).map((item) => (
                    <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 group">
                        <div class="h-64 overflow-hidden relative">
                            <img src={item.data.image} alt={item.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-indigo-800 uppercase tracking-wide">
                                {item.data.city}
                            </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-serif font-bold text-gray-900 mb-2 group-hover:text-indigo-700 transition-colors">
                                {item.data.title}
                            </h3>
                            <p class="text-gray-600 mb-4 line-clamp-2 text-sm">{item.data.card_summary}</p>
                            <a href={`/resorts/${item.data.path}/`} class="inline-block text-indigo-600 font-medium hover:text-indigo-800 uppercase text-sm tracking-wide">
                                Explore Resort â†’
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        </section>
      ))}
    </div>
  </div>
</Layout>
