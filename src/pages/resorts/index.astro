---
import Layout from '../../layouts/Layout.astro';

// 度假区数据
const resorts = [
  { 
    id: 'sanya-yalong-bay', 
    name: 'Sanya Yalong Bay', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Sanya+Yalong+Bay',
    summary: '7-kilometer white sand beach with luxury resorts and crystal-clear waters',
    featured: true,
    mainFeature: 'Marriott Beach Resort',
    season: 'November-April'
  },
  { 
    id: 'mogan-mountain', 
    name: 'Mogan Mountain Retreats', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Mogan+Mountain',
    summary: 'Bamboo forests and heritage villas in China\'s answer to the Swiss Alps',
    featured: true,
    mainFeature: 'The Lodge at Moganshan',
    season: 'Spring-Autumn'
  },
  { 
    id: 'lijiang-banyan-tree', 
    name: 'Banyan Tree Lijiang', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Banyan+Tree+Lijiang',
    summary: 'Luxury villa resort with private pools overlooking Jade Dragon Snow Mountain',
    featured: false,
    mainFeature: 'Mountain Villa',
    season: 'April-October'
  },
  { 
    id: 'gulangyu-island', 
    name: 'Gulangyu Island Resorts', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Gulangyu+Island',
    summary: 'Colonial-era architecture and coastal villas on car-free heritage island',
    featured: false,
    mainFeature: 'Seven Sons Hotel',
    season: 'March-November'
  },
  { 
    id: 'changbai-wanda', 
    name: 'Changbai Mountain Wanda', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Changbai+Mountain',
    summary: 'Premium ski resort with natural hot springs at the base of sacred volcano',
    featured: false,
    mainFeature: 'Westan Resort',
    season: 'December-March'
  },
  { 
    id: 'yangshuo-alila', 
    name: 'Alila Yangshuo', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Alila+Yangshuo',
    summary: 'Boutique cliff-side resort carved into limestone karst mountains above the Li River',
    featured: false,
    mainFeature: 'Heritage Suite',
    season: 'April-October'
  },
  { 
    id: 'dunhuang-sands', 
    name: 'Dunhuang Sands Resort', 
    image: 'https://via.placeholder.com/1200x800/6366f1/ffffff?text=Dunhuang+Sands',
    summary: 'Desert oasis resort with Silk Road-inspired architecture and star-gazing terraces',
    featured: false,
    mainFeature: 'Starlight Villa',
    season: 'May-October'
  }
];

// 按相同逻辑分配数据
const featuredResort = resorts.find(resort => resort.featured) || resorts[0];
const rightResorts = resorts.filter(resort => resort !== featuredResort).slice(0, 2);
const gridResorts = resorts.filter(resort => resort !== featuredResort && !rightResorts.includes(resort));
---

<Layout title="Resorts & Getaways - Explore China">
  <div class="min-h-screen bg-gray-50">
    <!-- 当前页大布局 -->
    <section class="py-12 container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- 左侧大卡片 (2/3区域) -->
        <div class="lg:col-span-2">
          <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 h-[500px]">
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent z-10"></div>
            <img 
              src={featuredResort.image} 
              alt={featuredResort.name} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute bottom-0 left-0 right-0 p-8 z-20 text-white">
              <span class="inline-block px-4 py-1 bg-indigo-600/90 backdrop-blur-sm rounded-full text-sm font-medium mb-4">
                {featuredResort.season}
              </span>
              <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4 leading-tight">
                {featuredResort.name}
              </h2>
              <p class="text-lg opacity-90 mb-6 max-w-2xl">
                {featuredResort.summary}
              </p>
              <a href={`/resorts/${featuredResort.id}/detail/`} class="inline-flex items-center text-white font-medium text-lg group/btn">
                Discover {featuredResort.name}
                <svg class="ml-2 w-5 h-5 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- 右侧中卡片 (1/3区域) -->
        <div class="space-y-8">
          {rightResorts.map((resort, index) => (
            <div class="group relative overflow-hidden rounded-xl shadow-md hover:shadow-lg transition-shadow h-64" key={index}>
              <img 
                src={resort.image} 
                alt={resort.name} 
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-5 text-white">
                <h3 class="text-xl font-serif font-bold">{resort.name}</h3>
                <p class="text-gray-200 mt-2 text-sm">{resort.mainFeature}</p>
                <a href={`/resorts/${resort.id}/detail/`} class="mt-3 inline-block text-indigo-300 hover:text-white transition-colors font-medium text-sm">
                  Explore {resort.name} →
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 下滑页小卡片区域 -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-serif font-bold text-gray-900">
            More Luxury Getaways
          </h2>
          <a href="#" class="text-indigo-600 hover:text-indigo-800 font-medium flex items-center group">
            View All Resorts
            <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {gridResorts.map((resort, index) => (
            <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow group" key={index}>
              <div class="h-48 overflow-hidden">
                <img 
                  src={resort.image} 
                  alt={resort.name} 
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="p-5">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{resort.season}</span>
                </div>
                <h3 class="text-lg font-serif font-bold text-gray-900 mb-2">{resort.name}</h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{resort.summary}</p>
                <a href={`/resorts/${resort.id}/detail/`} class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium text-sm group/btn">
                  Discover
                  <svg class="ml-1 w-4 h-4 opacity-0 group-hover/btn:opacity-100 transform group-hover/btn:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>