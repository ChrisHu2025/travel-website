---
// src/pages/admin.astro
import { cmsConfig } from '../lib/cms/config';

export const prerender = true;

// 序列化配置
const serializedConfig = JSON.stringify({
  ...cmsConfig,
  load_config_file: false
});
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Management</title>
  <!-- 引入官方脚本和样式 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/cms.css" />
</head>
<body>
  <!-- 挂载点 -->
  <div id="nc-root"></div>

  <!-- 1. 注入原始配置 -->
  <script id="cms-config" type="application/json" is:inline set:html={serializedConfig}></script>

  <!-- 2. 设置手动初始化 -->
  <script is:inline>window.CMS_MANUAL_INIT = true;</script>

  <!-- 3. 加载 CMS 库 -->
  <script src="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/decap-cms.js"></script>

  <!-- 4. 标准初始化 (Standard Init) -->
  <script is:inline>
    // 确保在 window load 后执行，避免 race condition
    window.addEventListener('load', function() {
      const configEl = document.getElementById('cms-config');

      if (!window.CMS) {
        console.error('CMS library not loaded');
        return;
      }

      try {
        const config = JSON.parse(configEl.textContent);

        // ✅✅✅ 官方标准做法：动态注入当前 Origin ✅✅✅
        // 这确保了 Config 中的 base_url 与 API 的 Origin 100% 一致
        // 从而通过 Decap CMS 内部的安全校验
        config.backend.base_url = window.location.origin;
        config.backend.auth_endpoint = '/api/decap-cms-github';

        console.log('✅ Initializing CMS with Standard Config');
        console.log('Base URL:', config.backend.base_url);

        CMS.init({ config });

      } catch (e) {
        console.error('Configuration Error:', e);
        document.body.innerHTML = '<p style="padding:20px;color:red">配置初始化失败，请刷新重试。</p>';
      }
    });
  </script>
</body>
</html>
