---
// src/pages/admin.astro
import { cmsConfig } from '../lib/cms/config';

export const prerender = true;

const serializedConfig = JSON.stringify({
  ...cmsConfig,
  load_config_file: false
});
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager</title>

  <!-- ✅ 移除了 Identity 的 CDN 链接 -->

  <!-- Decap CMS 核心库 (保留 CDN 方式，这是官方允许的混合模式，且最稳定) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/cms.css" />
</head>
<body>
  <div id="nc-root"></div>

  <!-- 注入 Config -->
  <script id="cms-config" type="application/json" is:inline set:html={serializedConfig}></script>

  <!-- 手动初始化标记 -->
  <script is:inline>window.CMS_MANUAL_INIT = true;</script>

  <!-- Decap CMS 脚本 -->
  <script src="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/decap-cms.js"></script>

  <!-- ✅ 标准初始化逻辑 -->
  <script>
    // 1. 导入 Identity 模块 (确保在 Admin 页面也能正常加载)
    import netlifyIdentity from 'netlify-identity-widget';

    // 2. 挂载到 window (关键！Decap CMS 依赖这个变量来自动处理登录)
    window.netlifyIdentity = netlifyIdentity;
    netlifyIdentity.init();

    // 3. 初始化 CMS
    window.addEventListener('load', function() {
      const configEl = document.getElementById('cms-config');
      if (window.CMS && configEl) {
        const config = JSON.parse(configEl.textContent);

        // 启动 CMS
        CMS.init({ config });

        // 绑定登录成功后的刷新逻辑
        netlifyIdentity.on("init", user => {
          if (!user) {
            netlifyIdentity.on("login", () => {
              document.location.reload();
            });
          }
        });
      }
    });
  </script>
</body>
</html>
