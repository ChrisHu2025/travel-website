---
// src/pages/admin.astro
// 纯静态管理页面，无服务端逻辑
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Explore China - 内容管理</title>
    <!-- 加载 Decap CMS 官方样式 -->
    <link rel="stylesheet" href="https://unpkg.com/decap-cms@^3/dist/cms.css" />
  </head>
  <body>
    <div id="nc-root"></div>

    <script type="module">
      // 禁用 Netlify Identity 回退
      window.netlifyIdentity = null;
      window.CMS_MANUAL_INIT = true;

      // ✅ 正确导入方式
      import CMS from 'decap-cms-app';

      // ✅ 必须包含 collections！
      CMS.init({
        config: {
          backend: {
            name: 'github',
            repo: 'ChrisHu2025/travel-website',
            branch: 'main',
            auth_scope: 'repo',
            client_id: 'Ov23liJds0MQcgZsIeob', // ← 临时硬编码，后续改 env
          },
          site_url: 'https://explorechina.travel',
          media_folder: 'public/images',
          public_folder: '/images',
          // ✅ 最小 collections 示例（必须有！）
          collections: [
            {
              name: 'test',
              label: '测试',
              folder: 'src/content/test',
              create: true,
              fields: [
                { label: '标题', name: 'title', widget: 'string' },
                { label: '内容', name: 'body', widget: 'markdown' }
              ]
            }
          ]
        }
      });
    </script>
  </body>
</html>
