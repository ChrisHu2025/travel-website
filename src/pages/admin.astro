---
// src/pages/admin.astro
import '../styles/global.css';
import { cmsConfig } from '../lib/cms/config';

// 启用静态生成（CMS 页面是纯静态 HTML + JS）
export const prerender = true;

// 安全序列化（防 XSS）
const serializedConfig = JSON.stringify(cmsConfig)
  .replace(/</g, '\\u003c')
  .replace(/>/g, '\\u003e');
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>内容管理系统 - Explore China</title>
  <!-- ✅ 使用 jsDelivr CDN（更稳定）并锁定 Decap CMS 3.9.0 -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/cms.css" />
  <style>
    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f5f5f5;
    }
    #nc-root { min-height: 100vh; }
    .cms-loading {
      position: fixed; top: 0; left: 0; width: 100%; height: 100%;
      display: flex; flex-direction: column; align-items: center; justify-content: center;
      background: white; z-index: 9999; transition: opacity 0.3s;
    }
    .cms-loading.hidden { opacity: 0; pointer-events: none; }
    .loading-spinner {
      width: 40px; height: 40px; border: 4px solid #f3f3f3; border-top: 4px solid #3498db;
      border-radius: 50%; animation: spin 1s linear infinite; margin-bottom: 16px;
    }
    @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    .loading-text { color: #666; font-size: 16px; }
    .cms-error {
      position: fixed; top: 20px; left: 50%; transform: translateX(-50%);
      background: #ffebee; color: #c62828; padding: 12px 24px; border-radius: 4px;
      border-left: 4px solid #c62828; max-width: 90%; z-index: 10000; display: none;
    }
  </style>
</head>
<body>
  <div id="nc-root"></div>

  <!-- 安全传递配置 -->
  <script id="cms-config-data" type="application/json">{serializedConfig}</script>

  <div class="cms-loading" id="js-loading">
    <div class="loading-spinner"></div>
    <div class="loading-text">正在加载内容编辑器...</div>
  </div>

  <div class="cms-error" id="js-error"></div>

  <!-- ✅ 加载 Decap CMS 3.9.0（与后端 token 格式兼容） -->
  <script is:inline src="https://cdn.jsdelivr.net/npm/decap-cms@3.9.0/dist/decap-cms.js"></script>

  <script is:inline>
    window.CMS_MANUAL_INIT = true;

    document.addEventListener('DOMContentLoaded', function() {
      const loadingEl = document.getElementById('js-loading');
      const errorEl = document.getElementById('js-error');

      let CONFIG;
      try {
        const configEl = document.getElementById('cms-config-data');
        CONFIG = JSON.parse(configEl.textContent);
        console.log('✅ CMS 配置加载成功，使用 Decap CMS v3.9.0');
      } catch (e) {
        showError('配置解析失败: ' + e.message);
        return;
      }

      let attempts = 0;
      const MAX_ATTEMPTS = 30;

      function initCMS() {
        attempts++;
        if (!window.CMS) {
          if (attempts >= MAX_ATTEMPTS) {
            showError('加载 CMS 库超时，请刷新页面');
            return;
          }
          setTimeout(initCMS, 100);
          return;
        }

        try {
          CMS.init({ config: CONFIG });

          CMS.registerEventListener({
            name: 'init',
            handler: () => {
              loadingEl.classList.add('hidden');
              setTimeout(() => loadingEl.style.display = 'none', 300);
              console.log('✅ CMS 初始化完成');
            }
          });

          CMS.registerEventListener({
            name: 'error',
            handler: (error) => {
              showError('CMS 错误: ' + (error.message || '未知错误'));
            }
          });
        } catch (e) {
          showError('CMS 初始化失败: ' + e.message);
        }
      }

      function showError(message) {
        if (errorEl) {
          errorEl.textContent = message;
          errorEl.style.display = 'block';
        }
        console.error('CMS Error:', message);
        loadingEl.style.display = 'none';
      }

      initCMS();
    });

    window.addEventListener('error', (event) => {
      const errorEl = document.getElementById('js-error');
      if (errorEl) {
        errorEl.textContent = '脚本错误: ' + event.message;
        errorEl.style.display = 'block';
      }
    });
  </script>
</body>
</html>
