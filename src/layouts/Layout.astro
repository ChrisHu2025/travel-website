---
import '../styles/global.css';

// 接收页面传入的标题
const { title = "Explore China" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <meta name="description" content="Discover authentic travel experiences and practical guides across China" />

  <!-- ❌ 已删除：旧的 CDN 脚本链接 -->
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="container mx-auto px-4">
      <nav class="flex justify-between items-center py-4 border-b border-gray-100">
        <a href="/" class="flex items-center space-x-2 text-2xl font-bold text-gray-900">
          <span class="font-serif font-bold">Explore China</span>
        </a>
        <div class="hidden md:flex space-x-8">
          <a href="/destinations/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Destinations</a>
          <a href="/in-season/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">In Season</a>
          <a href="/resorts/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Resorts & Getaways</a>
          <a href="/stories/" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Travel Stories</a>
        </div>
        <button class="md:hidden text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <main class="flex-grow">
    <slot />
  </main>

  <footer class="bg-gray-900 text-white pt-16 pb-8">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="space-y-4">
          <h3 class="text-xl font-bold">Explore China</h3>
          <p class="text-gray-400">Discover authentic travel experiences and practical guides across China</p>
          <div class="flex space-x-4 mt-4">
            <!-- Social Icons (Placeholder) -->
            <a href="#" class="text-gray-400 hover:text-white transition-colors">Facebook</a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">Instagram</a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">Twitter</a>
          </div>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-white">Destinations</h3>
          <ul class="space-y-2">
            <li><a href="/destinations/" class="text-gray-400 hover:text-white transition-colors">Beijing</a></li>
            <li><a href="/destinations/" class="text-gray-400 hover:text-white transition-colors">Shanghai</a></li>
            <li><a href="/destinations/" class="text-gray-400 hover:text-white transition-colors">Chengdu</a></li>
            <li><a href="/destinations/" class="text-gray-400 hover:text-white transition-colors">Xi'an</a></li>
            <li><a href="/destinations/" class="text-gray-400 hover:text-white transition-colors">Guilin</a></li>
          </ul>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-white">Explore</h3>
          <ul class="space-y-2">
            <li><a href="/in-season/" class="text-gray-400 hover:text-white transition-colors">In Season</a></li>
            <li><a href="/resorts/" class="text-gray-400 hover:text-white transition-colors">Resorts & Getaways</a></li>
            <li><a href="/stories/" class="text-gray-400 hover:text-white transition-colors">Travel Stories</a></li>
          </ul>
        </div>

        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-white">Contact</h3>
          <ul class="space-y-2">
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
            <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
        <p>&copy; 2025 Explore China. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- ✅ 标准 NPM 集成方案 -->
  <script>
    // 1. 导入 NPM 模块 (会被 Astro 打包到本地 JS 中)
    import netlifyIdentity from 'netlify-identity-widget';

    // 2. 挂载到 window 对象 (必须步骤，否则 Decap CMS 找不到它)
    window.netlifyIdentity = netlifyIdentity;

    // 3. 初始化
    netlifyIdentity.init();

    // 4. 处理邮件邀请链接的重定向逻辑
    // 当用户点击邮件链接来到首页时，如果检测到登录动作，跳转到 /admin 以弹出密码设置框
    netlifyIdentity.on("init", user => {
      if (!user) {
        netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  </script>
</body>
</html>
