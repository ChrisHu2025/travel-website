---
import '../styles/global.css';

// 接收页面传入的标题
const { title = "Explore China" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
  <meta name="description" content="Discover authentic travel experiences and practical guides across China" />

  <!-- ✅ 1. 引入 Google Fonts (Playfair Display + DM Sans) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,700;1,9..40,400&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">

</head>
<body class="min-h-screen flex flex-col bg-white text-gray-900 font-sans">
  <header class="bg-white border-b border-gray-100 sticky top-0 z-50">
    <div class="container mx-auto px-4">
      <nav class="flex justify-between items-center h-20">
        <!-- Logo 使用衬线体，更显高级 -->
        <a href="/" class="text-2xl font-serif font-bold tracking-tight text-gray-900">
          Explore China
        </a>
        <div class="hidden md:flex space-x-8 text-sm font-medium tracking-wide">
          <a href="/destinations/" class="text-gray-600 hover:text-black transition-colors uppercase">Destinations</a>
          <a href="/in-season/" class="text-gray-600 hover:text-black transition-colors uppercase">In Season</a>
          <a href="/resorts/" class="text-gray-600 hover:text-black transition-colors uppercase">Resorts</a>
          <a href="/stories/" class="text-gray-600 hover:text-black transition-colors uppercase">Stories</a>
        </div>
        <button class="md:hidden text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <main class="flex-grow">
    <slot />
  </main>

  <footer class="bg-gray-900 text-white pt-20 pb-10">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-12">
        <div class="space-y-6">
          <h3 class="text-2xl font-serif font-bold">Explore China</h3>
          <p class="text-gray-400 text-sm leading-relaxed">Curating the most authentic and luxurious travel experiences across the Middle Kingdom.</p>
        </div>
        <!-- 保持原有 Footer 链接结构，样式微调 -->
        <div class="space-y-4">
          <h3 class="text-sm font-bold uppercase tracking-widest text-gray-500">Discover</h3>
          <ul class="space-y-3 text-sm">
            <li><a href="/destinations/" class="text-gray-300 hover:text-white transition-colors">Destinations</a></li>
            <li><a href="/in-season/" class="text-gray-300 hover:text-white transition-colors">In Season</a></li>
            <li><a href="/resorts/" class="text-gray-300 hover:text-white transition-colors">Resorts</a></li>
            <li><a href="/stories/" class="text-gray-300 hover:text-white transition-colors">Stories</a></li>
          </ul>
        </div>
        <!-- ...其他 Footer 列保持... -->
      </div>
      <div class="border-t border-gray-800 mt-16 pt-8 text-center text-gray-500 text-xs">
        <p>&copy; 2025 Explore China. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    import netlifyIdentity from 'netlify-identity-widget';
    window.netlifyIdentity = netlifyIdentity;
    netlifyIdentity.init();
    netlifyIdentity.on("init", user => {
      if (!user) {
        netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  </script>
</body>
</html>
